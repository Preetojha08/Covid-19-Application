<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:id="@+id/linearlayout_disclaimer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disclaimer"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gilroy_bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Disclaimer_1"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:fontFamily="@font/gilroy_light"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Disclaimer_2"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:fontFamily="@font/gilroy_light"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Disclaimer_3"
                android:textSize="@dimen/_12sdp"
                android:justificationMode="inter_word"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:fontFamily="@font/gilroy_light"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Disclaimer_4"
                android:textSize="@dimen/_12sdp"
                android:justificationMode="inter_word"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:fontFamily="@font/gilroy_light"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Disclaimer_4"
                android:textSize="@dimen/_12sdp"
                android:justificationMode="inter_word"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:fontFamily="@font/gilroy_light"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Disclaimer_4"
                android:textSize="@dimen/_12sdp"
                android:justificationMode="inter_word"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:fontFamily="@font/gilroy_light"
                android:layout_gravity="center"/>

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:fontFamily="@font/gilroy_bold"
                android:text="I Agree to this Software and Service agreement"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accept Begin the Survey"
                android:gravity="center"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="@color/white"
                android:padding="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/colorPrimaryDark"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp">

                <TextView
                    android:id="@+id/question_heading_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Question No 1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/question_desc_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/question_heading_textview"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/gilroy_light"
                    android:text="Question will display here"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/question_desc_textview">

                    <RadioButton
                        android:id="@+id/radioButtonq2yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:fontFamily="@font/gilroy_light"
                        android:text=" Yes "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioButtonq2no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorPrimary"
                        android:fontFamily="@font/gilroy_light"
                        android:text=" No "
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                </RadioGroup>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>